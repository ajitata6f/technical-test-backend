<configuration>
    <property name="LOG_DIR" value="aaer-logs"/>
    <property name="LOG_FILE" value="aaer-log"/>

    <!-- Create an appender for standard out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%rootException</pattern>
        </encoder>
    </appender>

    <logger name="com.confluencebits.aaerlaw" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.confluencebits.aaerlaw" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Set the default log level to DEBUG level -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>